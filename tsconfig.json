{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "strict": true,
    "target": "ES2020",
    "paths": {
      "@components/*": ["components/*"],
      "@mappers/*": ["mappers/*"],
      "@config/*": ["config/*"],
      "@styles/*": ["styles/*"],
      "@mixins/*": ["mixins/*"],
      "@colors/*": ["colors/*"],
      "@spacing/*": ["spacing/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@pages/*": ["pages/*"],
      "@store/*": ["store/*"],
      "@App/*": ["App/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
